pipeline {
    agent any

    tools {
        maven 'Maven'
        jdk 'JDK'
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/vinayGowda173/tomcat.git'
            }
        }

        stage('Build WAR') {
            steps {
                sh 'mvn clean package'
            }
        }

       
        stage('Deploy WAR') {
            steps {
                sh 'cp target/my-webapp.war /opt/tomcat/webapps/'
            }
        }
    }
}
